<h2>Ajax Testing....  1 2 3</h2>

<script type='test/javascript'>
  function loadPosts(){
    $.getJSON("/posts.json", function(data){
      var html = "";
      $.each(data, function (index){
        // alert(data[index].content);
        html += <b><i>" + data[index].content + "</i></b><br>;
      });
      // update our div
        $("posts").html(html);
    });
  }
</script>

<div id='posts'>
  <a href="javascript:loadPosts();">This is da place</a>
</div>